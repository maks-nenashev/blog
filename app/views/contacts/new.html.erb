<h1>Contact us</h1>

<%= form_for :contact, url: contacts_path, data: {turbo:false}  do |f| %>

<% if @contact && @contact.errors.any?%> <!Prowerka! Esli estj ochybka to nepropustit>
<p>
  <%= @contact.errors.full_messages.each do |msg| %> <! Wywod infy w stolbec o oshybkah>
    <li><%= msg %></li>
<% end %>
    </ul> 
</p>
<% end%>

<p>
  <%= f.label :email %></br>
  <%= f.text_field :email %>
</p>
<p>
  <%= f.label :message %></br>
  <%= f.text_area :text %>
</p>

<p>
  <%= f.submit 'Send message' %>
</p>

<% end %>